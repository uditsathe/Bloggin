    <div class="container">
        <header class="border-bottom lh-1 py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-body-emphasis text-decoration-none " href="/"
                        method="get">Bloggin</a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="link-secondary" href="#" aria-label="Search">
                        <!-- <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor"
                            stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img"
                            viewBox="0 0 24 24">
                            <title>Search</title>
                            <circle cx="10.5" cy="10.5" r="7.5" />
                            <path d="M21 21l-5.2-5.2" />
                        </svg> -->
                    </a>
                    <a class="btn btn-sm btn-outline-secondary" href="/logout" method="get"
                        style=<%=logoutVisible%>>Logout</a>
                    <a class="btn btn-sm btn-outline-secondary" href="/login" method="get"
                        style=<%=loginVisible%>>Login/Register</a>
                </div>
            </div>
        </header>
    </div>
    <main class="container postDivContainer">
        <div id="userHeader">
            <div id="nameAndDP">
                <div id="userName">
                    <h1><%= user.firstName +" "+user.lastName %></h1>
                </div>
                <div id="userImg">
                    <!-- <img id="userDPimg"> -->
                </div>
            </div>
            <!-- <hr> -->

            <div id="pageContainer">
                <div class="row g-5">
                    <div class="col-md-8">
                        <article class="blog-post">
                            <%  posts.forEach(function(post){ %>
                            <div id="blogCard">
                                <h2 class="display-5 link-body-emphasis mb-1"><%=post.title%></h2>
                                <p class="blog-post-meta">
                                    <small class="text-body-secondary">
                                        <%=post.date.toDateString();%>
                                    </small>
                                </p>
                                <p>
                                    <%=post.content.substring(0, 100) + " ..."%>
                                    <a href="/posts/<%=post._id%>"
                                        style="text-decoration: none; color: black; font-weight: 500;">Read More</a>
                                </p>
                            </div>
                            <% }) %>
                    </div>
                    <div class="col-md-4">
                        <div class="position-sticky" style=<%=userAuthenticOrNot%>>
                            <div class="p-4 mb-3 bg-body-tertiary rounded animBG2">
                                <a href="/compose"
                                    style="text-decoration: none; color: black; font-weight: 500; padding-top:8px;">Compose
                                    <img src="../images/up-right-arrow.png" style="width:10px"> </a>
                            </div>
                        </div>
                        <div class="position-sticky" style="top: 2rem; padding-top: 16px;">
                            <div class="p-4 mb-3 bg-body-tertiary rounded">
                                <% if(user.bio != null){ %>
                                <h4 class="fst-italic">About Me</h4>
                                <% } %>
                                <p class="mb-0"><%=user.bio%>
                                    <% if(user.email != ""){%>
                                    <%=user.email%>
                                    <%} %></p>
                                <a href="mailto:<%=user.email%>" target="_blank"
                                    style="text-decoration: none; color: black; font-weight: 500; padding-top:8px;">Connect
                                    <img src="../images/up-right-arrow.png" style="width:10px"> </a>
                            </div>
                        </div>
                        <div class="position-sticky" style=<%=userAuthenticOrNot%>>
                            <div class="p-4 mb-3 bg-body-tertiary rounded">
                                <a href="/users/<%=user._id%>/settings"
                                    style="text-decoration: none; color: black; font-weight: 500; padding-top:8px;">Account
                                    Settings
                                    <img src="../images/up-right-arrow.png" style="width:10px"> </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="userPosts">

        </div>
    </main>
    <%- include("partials/footer"); -%>