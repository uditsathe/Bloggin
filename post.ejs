   <div class="container">
     <header class="border-bottom lh-1 py-3">
       <div class="row flex-nowrap justify-content-between align-items-center">
         <div class="col-4 pt-1">
           <a class="link-secondary" href="#"></a>
         </div>
         <div class="col-4 text-center">
           <a class="blog-header-logo text-body-emphasis text-decoration-none " href="/" method="get">Bloggin</a>
         </div>
         <div class="col-4 d-flex justify-content-end align-items-center">
           <a class="link-secondary" href="#" aria-label="Search">
           </a>
           <a class="btn btn-sm btn-outline-secondary" href="/logout" method="get" style=<%=logoutVisible%>>Logout</a>
           <a class="btn btn-sm btn-outline-secondary" href="/logout" method="get"
             style=<%=loginVisible%>>Login/Register</a>
         </div>
       </div>
     </header>
   </div>
   <main class="container postDivContainer postPageBody"
     style="padding-bottom: 50px; width:auto;  padding-right:110px; margin-left: 17%; padding-top: 25px; display:inline-block; align-items: center; justify-content: center;">
     <div id="postDiv" style="width: 90%;">
       <h1 id="postPageTtile"><%= post.title%></h1>
       <h5 id="postPageTtile"><%= post.date.toDateString();%></h5>
       <img src="/<%=post.thumbnailPath%>" class="postThumbnail" style=<%=isThumbnailPresent%>>
       <div id="postLinks">
         <div id="likeAndEdit" style="align-items: center;">
           <a class="likePostActionLink text-decoration-none" style="color: black;" href="/posts/<%=post._id%>/edit"
             method="get" style=<%=showEdit%>><img id="editPostBTN" src="../images/editing.png" placeholder="editPost">
           </a>
         </div>
         <div id="authorInfo">
           <h6>Author: </h6>
           <h6><a href="/user/<%=user._id%>" class="toAuthorPage"><%=authorName%></a></h6>
         </div>
       </div>
       <article><%=post.content%> </article>
       <div id="deleteBTNSpace">
         <a id="deleteLink" href="#" style=<%= showDelete %>>
           <img id="deletePostBTN" src="../images/bin.png" placeholder="deletePost">
           <h7>Delete Post</h7>
         </a>
       </div>
     </div>
   </main>
   <%- include("partials/footer"); -%>